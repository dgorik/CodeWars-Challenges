function consecutive(arr, a, b) {
    // Calculate the absolute difference between the indices of elements a and b,
    // and check if it equals 1. If it does, the elements are adjacent.
    let answer = Math.abs(arr.indexOf(a) - arr.indexOf(b)) === 1 ? true : false;
  
    // Return the result
    return answer;
}

// Example usage:
let x = consecutive([1, 3, 5, 7], 3, 7);

// Log the result
console.log(x); // This will log either true or false
