/**
 * Calculates the perimeter of a sequence based on the given parameters.
 *
 * @param {number} a - The length of one side of the sequence.
 * @param {number} n - The number of sides in the sequence.
 * @returns {number} The calculated perimeter of the sequence.
 */
function perimeterSequence(a, n) {
  return 4 * a * n;
}

// Example usage:
let x = perimeterSequence(1, 3);

// Log the result to the console
console.log(x);
