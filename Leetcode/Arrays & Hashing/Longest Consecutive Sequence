/**
 * @param {number[]} nums
 * @return {number}
 */
var longestConsecutive = function(nums) {
    let ans = 0
    let set = new Set(nums)

    for(let num of set){
        if(!set.has(num-1)){
            let candidate = 0
            while(set.has(num)){
                candidate++
                num++
            }
            ans = Math.max(candidate, ans)
        }
    }

    return ans
};

//The general idea here is to convert the nums array into a set to remove duplicates. We then iterate through the set and only consider a possible sequence if there is no number less that the number we are looping through
